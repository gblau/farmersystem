<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gb.dao.LeaveNoteMapper">
    <insert id="insert" parameterType="Comment">
        INSERT INTO note VALUES(null, #{nickname}, #{web}, #{message}, #{note_id})
    </insert>

    <delete id="deleteByPrimaryKey" parameterType="int">
        DELETE FROM note WHERE id=#{id} OR note_id=#{id};
    </delete>

    <select id="selectAllElements" resultType="Comment">
        SELECT * FROM comment
    </select>
    
    <select id="selectCommentsBySearch" parameterType="String" resultType="Comment">
        SELECT * FROM comment WHERE message LIKE #{key};
    </select>
</mapper>